{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pricing.local/schemas/driver-heartbeats.json",
  "title": "Driver Heartbeat",
  "description": "Schema for driver heartbeat events",
  "type": "object",
  "properties": {
    "driver_id": {
      "type": "string",
      "format": "uuid",
      "description": "Driver identifier"
    },
    "zone_id": {
      "type": "integer",
      "minimum": 1,
      "maximum": 64,
      "description": "Current geographic zone"
    },
    "status": {
      "type": "string",
      "enum": [
        "AVAILABLE",
        "BUSY"
      ],
      "description": "Driver availability status"
    },
    "ts_event": {
      "type": "integer",
      "minimum": 0,
      "description": "Event timestamp in epoch milliseconds"
    }
  },
  "required": [
    "driver_id",
    "zone_id",
    "status",
    "ts_event"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "driver_id": "6ba7b811-9dad-11d1-80b4-00c04fd430c8",
      "zone_id": 15,
      "status": "AVAILABLE",
      "ts_event": 1703098800000
    }
  ]
}